# Exemplo de configuração para PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/nomedobanco"

# JWT
JWT_SECRET="seu_jwt_secret_aqui_min_32_caracteres"
JWT_EXPIRES_IN="7d"

# Server
NODE_ENV="development"
PORT=3001

# CORS (separar por vírgula em produção)
CORS_ORIGINS="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Logs
LOG_LEVEL="info"

# Chatwoot (Opcional)
CHATWOOT_URL=""
CHATWOOT_TOKEN=""

# N8N (Opcional)
N8N_WEBHOOK_URL=""

# Mercado Pago (Opcional)
MP_ACCESS_TOKEN=""
MP_PUBLIC_KEY=""

# Company
COMPANY_NAME="Amoras Capital"
SALE_NUMBER_PREFIX="AC" 